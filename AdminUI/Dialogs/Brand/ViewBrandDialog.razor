<MudDialog>
    <DialogContent>
        <MudForm Spacing="spacing" style="width:500px">
            <!-- ID trường đọc, không thể chỉnh sửa -->
            <MudTextField ReadOnly="true" Variant="Variant.Outlined" Margin="Margin.Dense" T="int" Label="ID"
                          @bind-Value="brand.Id" Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Info" />

            <!-- Tên thương hiệu trường đọc, không thể chỉnh sửa -->
            <MudTextField ReadOnly="true" Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Label="Tên thương hiệu"
                          @bind-Value="brand.Name" Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Label" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Close">Đóng</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public BrandModel brand { get; set; } // Đối tượng BrandModel được truyền vào

    private void Close() => MudDialog.Close(DialogResult.Ok(true));
    int spacing = 0;
}

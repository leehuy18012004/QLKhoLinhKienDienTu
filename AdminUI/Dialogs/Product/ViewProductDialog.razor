
<MudDialog>
    <DialogContent>
        <div class="bg-light">
            <img src="@product.Photo" width="200" alt="Chưa cập nhật hình ảnh" />
            <MudText Typo="Typo.h5" GutterBottom="true">Thông tin chi tiết sản phẩm @product.Name</MudText>
            <MudForm Spacing="spacing" style="width:400px">
                <MudTextField ReadOnly Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Label="Id" @bind-Value="product.Id" Required="true" RequiredError="Name is required" />
                <MudTextField ReadOnly Variant="Variant.Outlined" Margin="Margin.Dense" T="string" Label="Tên" @bind-Value="product.Name" Required="true" RequiredError="Name is required" />
                <MudTextField ReadOnly=true InputType="InputType.Number" Variant="Variant.Outlined" Margin="Margin.Dense" T="double" Label="Giá" @bind-Value="product.Price" HelperText="Enter a valid price" Required="true" RequiredError="Price is required" />
                <MudTextField ReadOnly="true" InputType="InputType.Number" Variant="Variant.Outlined" Margin="Margin.Dense" T="int" Label="Số lượng" @bind-Value="product.Quantity" HelperText="Enter quantity" Required="true" RequiredError="Quantity is required" />
            </MudForm>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Close">Đóng</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public ProductModel product { get; set; }

    private void Close() => MudDialog.Close(DialogResult.Ok(true));
    int spacing = 0;
}